<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="10dp"
    android:layout_width="320dp"
    android:padding="7dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese descripciÃ³n"
            android:inputType="text"
            android:maxLength="50"
            android:layout_marginTop="7dp"/>

        <EditText
            android:id="@+id/etPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese precio"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:layout_marginTop="7dp"/>

        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese cantidad"
            android:inputType="number"
            android:maxLength="2"
            android:layout_marginTop="7dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spTipo"
            android:entries="@array/tipo_arrays"
            android:layout_marginTop="7dp">

        </Spinner>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPlomo">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:id="@+id/btnInsertarProducto"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorBlanco"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:id="@+id/btnCancelarProducto"
                android:background="@color/colorPlomo"
                android:textColor="@color/colorNegro"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
