<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="10dp"
    android:padding="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etObservacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese observaciÃ³n"
            android:inputType="text"
            android:maxLength="50"
            android:layout_marginTop="7dp"/>

        <EditText
            android:id="@+id/etCantidadVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese cantidad de productos"
            android:inputType="number"
            android:maxLength="3"
            android:layout_marginTop="7dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:id="@+id/btnInsertarVenta"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorBlanco"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Cancelar"

                android:background="@color/colorPlomo"
                android:textColor="@color/colorNegro"
                android:id="@+id/btnCancelarVenta"

                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
